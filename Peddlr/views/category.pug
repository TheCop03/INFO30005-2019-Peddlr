extends default.pug

block css
    style
        include ../public/css/category.css

block user
    a(href = '/signup')
        button.signupbutton(type='submit') Sign up
    a(href = '/loginpage')
        button.loginbutton(type='submit') Log In

block content

    div.searchzone
        h2 Let's Peddle
        a(href='./createlisting')
            button.createbutton(type='submit') + Create listing
        input(type='text', placeholder='   Search in this category...', name='search')
        a(href="/search")
            button.searchbutton(type='submit') Search
            i.fa.fa-search

    h3 #{category}

    div.latestlistingszone
        each listing in listings
            div.listing.dropup
                a(href = `/listing/id/${listing.id}`)
                    img.listingphoto(src=listing.photo alt=listing.title)
                    p.listingtitle #{listing.title}
                    div.dropup-content
                        p.listingdescription #{listing.description}

                    p.listingprice $#{listing.price} #{listing.interval}
                        div.dropup-content
                            p.listingdescription #{listing.description}
